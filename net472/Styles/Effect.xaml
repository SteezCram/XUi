<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:local="clr-namespace:XUi">

    <DropShadowEffect x:Key="XUi_Shadow" BlurRadius="20" Direction="0" Opacity=".20" Color="{DynamicResource FontColor}" ShadowDepth="0" RenderingBias="Performance"/>

    <BlurEffect x:Key="XUi_Blur" KernelType="Gaussian" Radius="5" RenderingBias="Performance"/>

</ResourceDictionary>